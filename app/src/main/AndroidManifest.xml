<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BDND.stegno">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        <activity android:name="com.BDND.stegno.Contectus"
            android:label="Contect US"
            android:parentActivityName="com.BDND.stegno.MainActivity"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

        </activity>
        <activity android:name="com.BDND.stegno.Feedback"
            android:label="Feedback"
            android:parentActivityName="com.BDND.stegno.MainActivity"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"

            />
        <activity android:name="com.BDND.stegno.About"
            android:label="About"
            android:parentActivityName="com.BDND.stegno.MainActivity"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"/>

        <activity android:name="com.BDND.stegno.selectdecode"/>
        <activity android:name="com.BDND.stegno.selectecode" />
        <activity android:name="com.BDND.stegno.secondactivity" />
        <activity android:name="com.BDND.stegno.nav_header" />
        <activity android:name="com.BDND.stegno.content_main" />
        <activity
            android:name="com.BDND.stegno.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>